generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Illustration {
  id          String       @id @default(uuid())
  difficulty  String       @unique
  Characters  Character[]
  Leaderboard Leaderboard?
  imageSrc    String
}

model Character {
  id             String       @id @default(uuid())
  name           String
  xStart         Int
  yStart         Int
  xEnd           Int
  yEnd           Int
  isFound        Boolean      @default(false)
  imageSrc       String
  Illustration   Illustration @relation(fields: [illustrationId], references: [id])
  illustrationId String

  @@unique([name, illustrationId])
}

model User {
  id            String      @id @default(uuid())
  name          String
  Leaderboard   Leaderboard @relation(fields: [leaderboardId], references: [id])
  leaderboardId String
  score         Int
}

model Leaderboard {
  id             String       @id @default(uuid())
  Users          User[]
  Illustration   Illustration @relation(fields: [illustrationId], references: [id])
  illustrationId String       @unique
}
