generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Illustration {
  id         String      @id @default(uuid())
  Characters Character[]
}

model Character {
  id             String       @id @default(uuid())
  name           String
  xStart         Int
  yStart         Int
  xEnd           Int
  yEnd           Int
  isFound        Boolean      @default(false)
  Illustration   Illustration @relation(fields: [illustrationId], references: [id])
  illustrationId String

  @@unique([name, illustrationId])
}
